                        <div class="card card-user">
                          
                    <div class="col-lg-10 col-md-8">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Patient Profile</h4>
                            </div>
                            <div class="content">
                                <form method="post" action="/queue/addpatient">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div  class="form-group">
                                               <label>Appointment Date</label><sup><span class="star">*</span></sup>
                                                <input name="date" id="date" type="date" required>
                                            </div>
                                        </div>                                        
                                    </div>      
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Speciality</label><sup><span class="star">*</span></sup>
                                                <select id="speciality" name="speciality" class="form-control" required>
                                                    <option value="">Select Speciality</option>
                                                {{#each doctors}}
                                                <option value="{{speciality}}">{{speciality}}</option>
                                                {{/each}}
                                                </select> 
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Doctor</label><sup><span class="star">*</span></sup>
                                                <select id="docName" name="docName" class="form-control" required>
                                                {{#each doctors}}
                                                <option value="{{docName}}" class="{{speciality}}">{{docName}}</option>
                                                {{/each}}
                                                </select> 
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Referred By</label>
                                                <input name="referredBy" type="text" id="reference" class="form-control border-input" placeholder="Reference">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>Name of the patient</label><sup><span class="star">*</span></sup>
                                                <input name="name" type="text" id="name" class="form-control border-input" placeholder="Name" required>
                                            </div>
                                        </div>
                                    </div>

                                     <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Sex</label><sup><span class="star">*</span></sup>
                                                <select name="sex" id="sex" class="form-control" required>
                                                <option>Male</option>
                                                <option>Female</option>
                                                </select> 
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Age</label><sup><span class="star">*</span></sup>
                                                <input name="age" type="text" id="age" class="form-control border-input" pattern="[0-9]{1,3}" placeholder="Age" required>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Weight ( Kg )</label>
                                                <input name="weight" type="text" id="weight" class="form-control border-input" pattern="[0-9]{1,3}" placeholder="Weight">
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Height ( cm )</label>
                                                <input name="height" type="text" id="height" class="form-control border-input" pattern="[0-9]{1,  3}\.[0-9]" placeholder="Height">
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label>Address</label><sup><span class="star">*</span></sup>
                                                <input name="address" type="text" id="address" class="form-control border-input" placeholder="Home Address" required>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label>Postal Code</label>
                                                <input name="pinCode" type="text" id="pincode"class="form-control border-input" pattern="[0-9]{6}" title="Six Digit Number Postal Code" placeholder="ZIP Code">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
