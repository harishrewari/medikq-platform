
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-chained/1.0.1/jquery.chained.js"></script>
<script type="text/javascript">
 $(document).ready(function(){
        $("#docName").chained("#speciality");
 });
</script>

<body>

    <div class="container-fluid">   
        <div class="sidebar" data-background-color="white" data-active-color="danger">
            <div class="sidebar-wrapper">
                    <div class="logo">
                        <a href="/dashboard" class="simple-text">
                            MedikQ
                        </a>
                    </div>

                    <ul class="nav">
                        <li >
                            <a href="/dashboard">
                                <i class="ti-panel"></i>
                                <p>New Patient</p>
                            </a>
                        </li>
                         <li class="active">
                            <a href="/patients">
                                <i class="ti-view-list-alt"></i>
                                <p>Patient List</p>
                            </a>
                        </li>                

                        <li>
                            <a href="/doctors">
                                <i class="ti-user"></i>
                                <p>Doctors</p>
                            </a>
                        </li>

                    </ul>
            </div>
        </div>
    </div>  


    <div class="wrapper">
        <div class="main-panel">

            <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar bar1"></span>
                                    <span class="icon-bar bar2"></span>
                                    <span class="icon-bar bar3"></span>
                                </button>
                                <a class="navbar-brand" href="#">Appointment Management</a>
                            </div>
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav navbar-right">

                                    <li>
                                        <a href="logout">
                                        <i class="ti-settings"></i>
                                        <p>Logout</p>
                                        </a>

                                    </li>
                                </ul>

                            </div>
                        </div>
                    </nav>


            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Appointment Entries</h4>
                                    <br>
                                        <form method="post" action="/queue/allpatient">

                                            <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Speciality</label>
                                                            <select id="speciality" name="speciality" class="form-control">
                                                                <option value="">Select Speciality</option>
                                                            {{#each doctors}}
                                                            <option value="{{speciality}}">{{speciality}}</option>
                                                            {{/each}}
                                                            </select> 
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <label>Doctor</label>
                                                            <select id="docName" name="docName" class="form-control">
                                                            {{#each doctors}}
                                                            <option value="{{docName}}" class="{{speciality}}">{{docName}}</option>
                                                            {{/each}}
                                                            </select> 
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div id="date"  class="form-group">
                                                            <label>Appointment Date</label><br>
                                                            <input id="date" name="date" type="date">
                                                        </div>
                                                    </div>
                                            </div>
                                            <div class="row">
                                                  <div class="col-md-2 col-md-offset-5">
                                                        <button type="submit" class="btn btn-info btn-fill btn-wd">Submit</button>
                                                    </div>
                                            </div>

                                        </form>

                                    {{#if patients}}
                                
                                    <div class="content table-responsive table-full-width">
                                        <table class="table table-striped">
                                            <thead>
                                                <th>No.</th>
                                                <th>Name</th>
                                                <th>Doctor</th>
                                                <th>Speciality</th>
                                                <th>Sex</th>
                                                <th>Age</th>
                                                <th>Address</th>
                                            </thead>

                                            <tbody>
                                                {{#each patients}}
                                                <tr>
                                                    <td>{{number}}</td>
                                                    <td>{{name}}</td>
                                                    <td>{{docName}}</td>
                                                    <td>{{speciality}}</td>
                                                    <td>{{sex}}</td>
                                                    <td>{{age}}</td>
                                                    <td>{{address}}</td>
                                                </tr>
                                                {{/each}}
                                            </tbody>
                                        </table>
                                      {{/if}}
                                    </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>



</html>
