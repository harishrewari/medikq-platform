
<body>
    <div class="container-fluid">   
        <div class="sidebar" data-background-color="white" data-active-color="danger">
            <div class="sidebar-wrapper">
                    <div class="logo">
                        <a href="/dashboard" class="simple-text">
                            MedikQ
                        </a>
                    </div>

                    <ul class="nav">
                        <li >
                            <a href="/dashboard">
                                <i class="ti-panel"></i>
                                <p>New Patient</p>
                            </a>
                        </li>
                         <li>
                            <a href="/patients">
                                <i class="ti-view-list-alt"></i>
                                <p>Patient List</p>
                            </a>
                        </li>                

                        <li class="active">
                            <a href="/doctors">
                                <i class="ti-user"></i>
                                <p>Doctors</p>
                            </a>
                        </li>
                    </ul>
            </div>
        </div>
    </div>  


    <div class="wrapper">

        <div class="main-panel">

            <nav class="navbar navbar-default">
                        <div class="container-fluid">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar bar1"></span>
                                    <span class="icon-bar bar2"></span>
                                    <span class="icon-bar bar3"></span>
                                </button>
                                <a class="navbar-brand" href="#">Appointment Management</a>
                            </div>
                            <div class="collapse navbar-collapse">
                                <ul class="nav navbar-nav navbar-right">
                                    <li>
                                        <a href="logout">
                                        <i class="ti-settings"></i>
                                        <p>Logout</p>
                                        </a>

                                    </li>
                                </ul>

                            </div>
                        </div>
                    </nav>



            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Doctors' Schedule</h4>
                                    <br>
                                    <div class="col-md-4">
                                                <div class="form-group">
                                                    <label>Doctor</label>
                                                    <select id="doctor" class="form-control">
                                                    <option>Ramesh</option>
                                                    <option>Yogesh</option>
                                                     <option>Mahesh</option>
                                                     <option>Vishnu</option>
                                                    </select> 
                                                </div>
                                            </div>

                                            <div class="col-md-4">
                                                <div id="date" class="form-group">
                                                   <label>Appointment Date<i class="fa fa-calendar"></i></label>
                                                    <input id="date" type="date">
                                                </div>
                                            </div>

                                </div>
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-striped">
                                        <thead>
                                            <th>Sr. No.</th>
                                            <th>Doctor</th>
                                            <th>Speciality</th>
                                            <th>Availability</th>
                                        </thead>
                                        <tbody>
                                         {{#each doctors}}
                                            <tr>
                                                <td>{{@index}}</td>
                                                <td>{{docName}}</td>
                                                <td>{{speciality}}</td>
                                                <td><input id="input-a" value="" data-default="20:48"></td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>

                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

<script>
var input = $('#input-a');
input.clockpicker({
    autoclose: true
});

// Manual operations
$('#button-a').click(function(e){
    // Have to stop propagation here
    e.stopPropagation();
    input.clockpicker('show')
            .clockpicker('toggleView', 'minutes');
});
$('#button-b').click(function(e){
    // Have to stop propagation here
    e.stopPropagation();
    input.clockpicker('show')
            .clockpicker('toggleView', 'hours');
});
</script>